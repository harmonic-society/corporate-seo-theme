# WordPress Database Configuration
# データベース接続情報（wp-config.phpから取得してください）

# データベースホスト（通常は localhost または MySQL サーバーのアドレス）
DB_HOST=localhost

# データベース名
DB_NAME=wp629555_harmonic

# データベースユーザー名
DB_USER=your_database_username

# データベースパスワード
DB_PASSWORD=your_database_password

# データベースポート（デフォルトは3306）
DB_PORT=3306

# テーブルプレフィックス（通常は wp_ ）
DB_PREFIX=wp_

# データベース文字セット
DB_CHARSET=utf8mb4

# データベース照合順序
DB_COLLATE=utf8mb4_unicode_ci

# SSLを使用する場合（オプション）
# DB_SSL_CA=/path/to/ca-cert.pem
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem

# その他の必要な情報
# SITE_URL=https://harmonic-society.co.jp
# HOME_URL=https://harmonic-society.co.jp